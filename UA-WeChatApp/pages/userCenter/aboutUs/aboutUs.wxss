/* pages/userCenter/aboutUs/aboutUs.wxss */
.aboutUs-wrapper{
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.viedo-image-bg{
  width: 100%;
  height: 456rpx;
  position: relative;
}
.imageBg{
  width: 100%;
  height: 456rpx;
}
.playSty{
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  top: 35%;
  left: 40%;
  z-index: 100;
  /* border: 1px solid red; */
}
.aboutUs-wrapper video{
  width: 100%;
  height: 456rpx;
}
.view-padding{
  padding: 20rpx;
  box-sizing: border-box;
}
.text-title{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 0;
}
.icon-red{
  width: 50rpx;
  height: 6rpx;
  background: red;
  display: inline-block;
}
.textStyle{
  font-size: 34rpx;
  font-weight: bold;
}
.text-content{
  width: 100%;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.image_class{
  width: 100%;
  height: auto;
}
.image_class image{
  width: 100%;
  height: auto;
  display: block;
}