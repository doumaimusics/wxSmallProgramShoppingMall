.choiceDiscount{
  width: 100%;
  height: auto;
  background: #ffffff; 
}
.search-wrapper{
  width: 100%;
  height: 100rpx;
  margin-top: 5rpx;
  background: #ffffff; 
}
.search-input{
  width:80%;
  height:75rpx;
  border:2px solid #BCBCBC;
  display:inline-block;
  box-sizing:border-box;
  font-size:30rpx;
  padding-left:20rpx;
  border-top-left-radius:26rpx;
  border-bottom-left-radius:26rpx;
  position:absolute;
  top:20rpx;
  left:20rpx;
  z-index:1;
}
.search-button{
  width:30%; 
  height: 75rpx;
  display: inline-block; 
  line-height: 75rpx;
  background: #FDABC1;
  color: #FFF;
  text-align: center;
  border-radius: 0;
  font-size: 30rpx;
  border-top-left-radius:26rpx;
  border-bottom-left-radius:26rpx;
  border-top-right-radius:26rpx;
  border-bottom-right-radius:26rpx;
  position:absolute;
  top:20rpx;
  right:20rpx;
  z-index:9;
}
.content-wrapper{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx 20rpx 30rpx 20rpx;
  background: #ffffff;
}
.content-item{
  width: 100%;
  height: 220rpx;
  border:1px solid #F8F8F8;
  display: flex;
  margin-top: 20rpx;
}
.item-left{
  flex: 0 0 270rpx;
  color: #ffffff;
  background-image: url('https://wx.3dculab.com/wxMsgSvr/hellokittyimg/resources/imgs/couponbg.png');
  background-repeat:no-repeat; 
  background-size:100% 100%;
}
.item-left-sum{
  width: 100%;
  font-size: 40rpx;
  text-align: center;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}
.text-sum{
  width: 100%;
  font-size: 70rpx;
  font-weight: bold;
}
.item-left-explain{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}
.item-right{
  flex: 1;
  width: 100%;
  text-align: center;
}
.item-right-title{
  color: #f35a90;
  font-size: 50rpx;
  font-weight: 900;
  padding-top:30rpx;
}
.item-right-explain{
  color:#333;
  font-size: 30rpx;
  padding:25rpx 0;
}
.item-right-time{
  color:#949494;
  font-size: 24rpx;
}