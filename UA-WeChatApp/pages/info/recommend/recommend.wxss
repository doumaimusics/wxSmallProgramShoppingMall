.area-list{
  background: #fff;
}
.filter {
  width: 750rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.filter>view {
  width: 250rpx;
  height: 104rpx;
  line-height: 104rpx;
  float: left;
  font-size: 32rpx;
  font-weight: 600;
  background: #2F2F2F;
  color: rgba(255, 255, 255, 1);
  position: relative;
}

.filter>view.active {
  background: #ec0000;
}

.filter>view.active .pointer {
  height: 0px;
  width: 0px;
  border-top: 20px solid #ec0000;
  border-left: 20px solid transparent;
  border-right: 20px solid transparent;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -20rpx;
  margin: auto;
}

.filter>view .sort-icon {
  width: 16rpx;
  height: 28rpx;
  display: inline-block;
  background: url("http://img.fansnew.com/wwwww.png")no-repeat;
  background-size: 100%;
  margin-left: 8rpx;
}
.filter>view .sort-icon.active{
  background: url("http://img.fansnew.com/dddd.png")no-repeat;
  background-size: 100%;
}
.mall_box{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.mall_main {
  width: 340rpx;
  background: #fff;
  margin-bottom: 30rpx;
}

.img_box {
  width: 340rpx;
  height: 340rpx;
}

.txt_m {
  display: block;
  width: 340rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  padding-top: 30rpx;
}

.txt_m .shop-title{
  min-height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.color_txt {
  font-size: 28rpx;
  color: #ababab;
  margin-left: 20rpx;
}

.color_t {
